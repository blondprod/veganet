<!-- welcome.twig -->
<body onload="document.title= '{{ session.Slogan }}';">
    <div class="container-fluid">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-top: 40px;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="{{ session.IMG[1] }}" alt="image1">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>
                                {% autoescape %}
                                    {{ (session.TXT[1])|raw }}
                                {% endautoescape %}
                            </h1>
                            {#<p class="lead">{% trans "BonjourH1" %} {{ session.FBX_USER_PRENOM }} !</p>#}
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ session.IMG[2] }}" alt="image2">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>
                                {% autoescape %}
                                    {{ (session.TXT[2])|raw }}
                                {% endautoescape %}
                            </h1>
                            {#<p class="lead">{{ "now"|date("l m F y") }}</p>#}
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ session.IMG[3] }}" alt="image3">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>
                                {% autoescape %}
                                    {{ (session.TXT[3])|raw }}
                                {% endautoescape %}
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ session.IMG[4] }}" alt="image4">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>
                                {% autoescape %}
                                    {{ (session.TXT[4])|raw }}
                                {% endautoescape %}
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
        {#{% if ( (session.FBX_USER_SU) == '1' ) %}#}
            {#<div>{{ dump(session) }}</div>#}
        {#{% endif %}#}
    </div>