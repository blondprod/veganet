<!-- modalPlanning.twig -->
<div class="modal-dialog">
    <div class="modal-content modal-lg">
        <!-- Modal head -->
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" title="{% trans "fermeLaModalTitleBtn" %}">&times;</button>
            <h4 class="modal-title" id="ModalAlert">{% trans "Planning" %} {{ DATA_PLANNING[0].NomMachine }}</h4>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr class="lead">
                        <th>#</th>
                        <th>{% trans "Dossier" %}</th>
                        <th>{% trans "Element" %}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for n , itm in DATA_PLANNING %}
                        <tr class="lead" onclick="getDataDossierDeFabTlElementIntoFiche({{ itm.IDElement }},'{{ itm.Dossier }}');">
                            <td style="vertical-align: middle;">{{ n+1 }}.</td>
                            <td style="vertical-align: middle;"><code>{{ itm.Dossier }}</code></td>
                            <td style="vertical-align: middle;"><h4><span class="badge">{{ itm.NomElement }}</span></h4></td>
                            <td style="width: 450px;vertical-align: middle" class="text text-center">
                                <img class="img-thumbnail" style="width: 400px;" src="img/barcode/dossier/dossiertlement-{{ itm.IDDossierDeFab_tl_element }}.png">
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Modal foot -->
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" title="{% trans "fermeLaModalTitleBtn" %}">{% trans "Fermer" %}</button>
        </div>
    </div>
</div>
