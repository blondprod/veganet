<!-- tableLiaisonFonctionTlPage.twig -->
<table class="table table-bordered table-hover table-condensed">
    <tr>
        <th>{% trans "Page" %}</th>
        <th>{% trans "Actif" %}</th>
        {#<th style="width: 7%;"></th>#}
    </tr>
    {% for i, data in data_table %}
    <tr>
        <td>{{ data.Nom }}</td>
        <input type="hidden" id="IDPage_{{ data.ID }}" value="{{ data.ID }}">
        <td class="text text-center">
            <input type="checkbox"
                   id="chkFonctionTlPage_{{ data.ID }}" {% if (data.IDFonction != '-' ) %} checked="checked" {% endif %}
                   onchange="getLiaisonFonctionTlPage(this.checked?1:0,{{ data.ID }});">
        </td>
    </tr>
    {% endfor %}
</table>
{#{{ dump(data) }}#}