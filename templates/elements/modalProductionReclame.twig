<!-- MODAL CLOTURE Reclame -->
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="clotureReclame">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal head -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" title="{% trans "fermeLaModalTitleBtn" %}">&times;</button>
                <h4 class="modal-title" id="ModalAlert">{% trans "AlertH4" %}</h4>
            </div>
            <!-- Modal body -->
            <form class="form-group" role="form" method="POST" name="search" action="ProductionReclame">
                <input type="hidden" name="action" value="getClotureReclame">
                <input type="hidden" id="IDReclameModalCloture" name="IDReclameModalCloture">
                <div class="modal-body">
                    <p class="lead">{% trans 'Etes-vous sur de vouloir fermer ce(s) demande(s) ?' %}</p>
                </div>
                <!-- Modal foot -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" title="{% trans "fermeLaModalTitleBtn" %}">{% trans "Annuler" %}</button>
                    <button type="submit" class="btn btn-warning" title="{% trans "fermeLaModalTitleBtn" %}">{% trans "Clôturer" %}</button>
                </div>
            </form>
        </div>
    </div>
</div>

