<!-- MODAL Add reponse -->
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="addReponse">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal head -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" title="{% trans "fermeLaModalTitleBtn" %}">&times;</button>
                <h4 class="modal-title" id="ModalAlert">{% trans "Ajouter une demande" %}</h4>
            </div>
            <!-- Modal body -->
            <form class="form-group" role="form" method="POST" name="search" action="ProductionReclame">
                <div class="modal-body">
                    <input type="hidden" name="action" value="getAddReponse">
                    <div class="row">
                        <!-- reponse -->
                        <div id="divReponse">
                            <div class="form-group col-xs-12 col-sm-10 col-md-10 col-lg-10">
                                <label class="control-label" for="ReponseModal"
                                       title="{% trans "Réponse à(aux) demande(s)" %}">{% trans "Reponse" %}</label>
                                <input type="text" class="form-control tooltip-link" data-placement="bottom" id="ReponseModal"
                                       placeholder="{% trans "Texte" %}" name="ReponseModal"
                                       onkeyup="checkInputText('divReponse',this.value.length,2);if(this.value.length>1){$('#btnUpdate').prop('disabled',false)}else {$('#btnUpdate').prop('disabled',true)}"
                                       title="{% trans "Réponse à(aux) demande(s)" %}">
                                <input type="hidden" id="IDReclame" name="IDReclame">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal foot -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" title="{% trans "fermeLaModalTitleBtn" %}">{% trans "Annuler" %}</button>
                    <button type="submit" class="btn btn-success" id="btnUpdate" disabled title="{% trans "fermeLaModalTitleBtn" %}">{% trans "Enregistrer" %}</button>
                </div>
            </form>
        </div>
    </div>
</div>

